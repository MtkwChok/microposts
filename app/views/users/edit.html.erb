<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, class: 'control-label' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, class: 'control-label' %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :password, class: 'control-label' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation", class: 'control-label' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      
      <%= f.label :area, class: 'control-label' %>
      <%= f.text_field :area, class: 'form-control' %>
      
      <%= f.label :profile, class: 'control-label' %>
      <%= f.text_area :profile, class: 'form-control' %>
      
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
