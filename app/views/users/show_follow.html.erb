<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @users.any? %>
      <h3><%= @title %></h3>
      <% @users.each do |user| %>
        <li>
          <div>
            <%= link_to gravatar_for(user, size: 50), user %>
            <span><%= link_to user.name, user %></span>
            <hr />
          </div>
        </li>
      <% end %>
    <% end %>
  </div>
</div>
